@model IEnumerable<_24DH112414_MyStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 style="color:white;" class="bg-success">DACH MỤC SẢN PHẨM</h2>

<table class="table bg-info col-lg-8">
    <tr>
        <th style="color:white;" class="bg-success col-lg-5">
            @*@Html.DisplayNameFor(model => model.CategoryName)*@
            Tên danh mục
        </th>
        <th style="color:white;" class="bg-success col-lg-3"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.ActionLink("Cập nhật", "Edit", new { id = item.CategoryID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.CategoryID }, new { @class = "btn btn-primary" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>