﻿@model _24DH112414_MyStore.Models.Order
@{
    ViewBag.Title = "OrderSuccess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>XÁC NHẬN ĐƠN HÀNG</h2>
<h3>Thông tin đơn hàng</h3>
<div>
    <p><strong>Mã đơn hàng:</strong> @Model.OrderID </p>
    <p><strong>Ngày đặt hàng:</strong> @Model.OrderDate </p>
    <p><strong>Tổng số tiền:</strong> @Model.TotalAmount </p>
    <p><strong>Trạng thái thanh toán:</strong> @Model.PaymentStatus </p>
    <p><strong>Phương thức thanh toán:</strong> @Model.PaymentMethod </p>
    <p><strong>Phương thức giao hàng:</strong> @Model.DeliveryMethod </p>
    <p><strong>Địa chỉ giao hàng:</strong> @Model.ShippingAddress </p>
</div>

<h3>Chi tiết đơn hàng</h3>
<table class="table">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
            <th>Tổng giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Product.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice</td>
                <td>@item.TotalPrice</td>
            </tr>
        }
    </tbody>
</table>

