<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tân Store</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        /* Đặt màu nền cho toàn bộ trang */
        body {
            background-color: #B0E0E6; /* Màu xanh nước biển dịu */
            font-family: Arial, sans-serif;
        }

        /* Đặt màu nền cho navbar */
        .navbar {
            background-color: #4682B4; /* Màu xanh dương đậm */
        }

        /* Đặt màu cho các liên kết trong navbar khi hover */
        .nav-link:hover {
            color: #FFD700; /* Màu vàng khi hover */
        }

        /* Tùy chỉnh footer */
        footer {
            background-color: #4682B4; /* Màu giống navbar */
            color: white;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Tân Store", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Trang chủ", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Giỏ hàng", "Index", "Cart", new { area = "" }, new { @class = "nav-link" })</li>

                    @if (Session["CustomerName"] != null)
                    {
                        // === NẾU ĐÃ ĐĂNG NHẬP ===
                        <li class="nav-item">
                            <a class="nav-link text-light" href="#">Xin chào, @Session["CustomerName"]</a>
                        </li>
                        <li>@Html.ActionLink("Đơn hàng", "OrderHistory", "Order", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Đăng xuất", "Logout", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Đơn hàng", "Order", "OrderHistory", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        // === NẾU CHƯA ĐĂNG NHẬP ===
                        <li>@Html.ActionLink("Đăng nhập", "Login", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Đăng ký", "Register", "Account", new { area = "" }, new { @class = "nav-link" })</li>
                        <li>@Html.ActionLink("Đơn hàng", "OrderHistory", "Order", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Trương Gia Tân</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
